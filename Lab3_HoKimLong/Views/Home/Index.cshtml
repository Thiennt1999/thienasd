@model IEnumerable<Lab3_HoKimLong.Models.Course>

@{
    ViewBag.Title = "Home Page";
}

<h2>Index</h2>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                     <div class="month"> @course.DateTime.ToString("MM") </div>
                    <div class="day"> @course.DateTime.ToString("MM") </div>
                </div> 
                <div class="details">
                     <span class="lecturer"> @course.Lecturer.Name</span>
                    <span class="category"> @course.Category.Name</span>
                <button data-course-id="@course.Id"class="btn btn-default" btn-sm js-toggle-atendanse>Going</button>
                </div>
            </li>
        }
    </ul>
    @section script
    
</div>